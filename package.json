{
  "name": "client-tracker",
  "version": "1.0.0",
  "description": "Client tracker",
  "main": "src/server/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc -b -v",
    "browserify:client": "browserify dist/client/index.js > dist/client/client.js",
    "clean": "rm -rf dist",
    "start": "node dist/server/index.js",
    "watch": "tsc-watch -b -v --onSuccess 'npm run dev'",
    "dev": "npm run browserify:client && node --inspect=0.0.0.0:5858 dist/server/index.js",
    "test": "prettier --check -w \"src/**/*.ts\""
  },
  "author": "Alexander Shogenov <i@shagg.ru>",
  "license": "UNLICENSED",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "app-root-path": "^3.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "envify": "^4.1.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^12.0.0",
    "mongodb": "^4.10.0"
  },
  "devDependencies": {
    "@types/koa": "^2.13.5",
    "@types/node": "^18.11.0",
    "browserify": "^17.0.0",
    "prettier": "^2.7.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.8.4"
  }
}
